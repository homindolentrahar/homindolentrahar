---
import type { GetStaticPaths } from "astro";
import Layout from "@/layouts/Layout.astro";
import type { CollectionEntry } from "astro:content";
import { getCollection } from "astro:content";
import { getEntry } from "astro:content";
import { Image } from "astro:assets";
import {
  Breadcrumb,
  BreadcrumbList,
  BreadcrumbItem,
  BreadcrumbLink,
  BreadcrumbSeparator,
  BreadcrumbPage,
} from "@/components/ui/breadcrumb";
import moment from "moment";
import { Button } from "@/components/ui/button";
import Prose from "@/components/Prose.astro";

export const getStaticPaths = (async () => {
  const works: CollectionEntry<"project">[] = await getCollection("project");

  return works.map((work) => ({
    params: { slug: work.slug },
  }));
}) satisfies GetStaticPaths;

const { slug } = Astro.params;
const entry = await getEntry("project", slug);
const { Content } = await entry.render();
const baseUrl = import.meta.env.BASE_URL;
---

<Layout title={`Works - ${entry.data.title}`}>
  <main class="flex flex-col">
    <div
      class="flex flex-col items-center min-h-[720px] p-8 md:p-12 lg:p-16 mt-16"
    >
      <Breadcrumb className="self-start py-4">
        <BreadcrumbList>
          <BreadcrumbItem>
            <BreadcrumbLink href={`${baseUrl}/works/`}>Works</BreadcrumbLink>
          </BreadcrumbItem>
          <BreadcrumbSeparator />
          <BreadcrumbItem>
            <BreadcrumbLink
              href={`${baseUrl}/works/${entry.data?.category.slug}`}
              >{entry.data?.category.title}</BreadcrumbLink
            >
          </BreadcrumbItem>
          <BreadcrumbSeparator />
          <BreadcrumbItem>
            <BreadcrumbPage>{entry.data?.title}</BreadcrumbPage>
          </BreadcrumbItem>
        </BreadcrumbList>
      </Breadcrumb>
      <Image
        width={100}
        height={100}
        src={entry?.data.thumbnailUrl}
        alt={entry?.data.title}
        class="w-full h-[320px] md:h-[440px] object-cover"
      />
      <div
        class="flex flex-col items-start w-full lg:w-10/12 mt-6 lg:mt-8 gap-4 lg:gap-6"
      >
        <div class="w-full grid grid-cols-1 lg:grid-cols-4 gap-8 lg:gap-16">
          <div class="flex flex-col items-start gap-4 lg:gap-6">
            <div class="flex flex-col items-start gap-1">
              <h5 class="text-gray-500 dark:text-gray-400 text-sm lg:text-base">
                Role(s)
              </h5>
              <ul
                class="text-base lg:text-lg font-medium text-gray-950 dark:text-white flex flex-col gap-1 mt-1"
              >
                {entry.data.roles.map((role) => <li>{role}</li>)}
              </ul>
            </div>
            <div class="flex flex-col items-start gap-1">
              <h5 class="text-gray-500 dark:text-gray-400 text-sm lg:text-base">
                Service(s)
              </h5>
              <ul
                class="text-base lg:text-lg font-medium text-gray-950 dark:text-white flex flex-col gap-1 mt-1"
              >
                {entry.data.services.map((service) => <li>{service}</li>)}
              </ul>
            </div>
            <div class="flex flex-col items-start gap-1">
              <h5 class="text-gray-500 dark:text-gray-400 text-sm lg:text-base">
                Duration
              </h5>
              <div
                class="text-base lg:text-lg font-medium text-gray-950 dark:text-white flex flex-col gap-1 mt-1"
              >
                <p>
                  {moment(entry.data.startDate).format("MMMM yyyy")}
                  -
                  {
                    entry.data.endDate === undefined
                      ? "Now"
                      : moment(entry.data.endDate).format("MMMM yyyy")
                  }
                </p>
              </div>
            </div>
            {
              entry.data.type === "Professional" && (
                <div class="flex flex-col items-start gap-1">
                  <h5 class="text-gray-500 dark:text-gray-400">Client</h5>
                  <div class="text-lg font-medium text-gray-950 dark:text-white flex flex-col gap-1 mt-1">
                    <p>
                      {entry.data.client === undefined
                        ? "Confidential"
                        : entry.data.client}
                    </p>
                  </div>
                </div>
              )
            }
          </div>
          <div class="flex flex-col gap-2 items-start w-full col-span-3">
            <h1
              class="text-3xl lg:text-4xl font-semibold text-gray-950 dark:text-white text-start"
            >
              {entry.data.title}
            </h1>
            <p class="text-gray-500 dark:text-gray-400 text-start mt-2">
              {entry.data.desc}
            </p>
            <div
              class="flex flex-col md:flex-row gap-4 lg:gap-6 mt-6 w-full md:w-10/12 lg:w-8/12 xl:w-6/12"
            >
              <a
                href={entry.data.url}
                target="_blank"
                class="flex-grow h-10 px-4 py-2 bg-gray-900 text-gray-50 hover:bg-gray-900/90 dark:bg-gray-50 dark:text-gray-900 dark:hover:bg-gray-50/90 inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium ring-offset-white transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-gray-950 focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 [&_svg]:pointer-events-none [&_svg]:size-4 [&_svg]:shrink-0 dark:ring-offset-gray-950 dark:focus-visible:ring-gray-300"
                >Open Project</a
              >
              <a
                href={entry.data.projectUrl}
                target="_blank"
                class="flex-grow inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium ring-offset-white transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-gray-950 focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 [&_svg]:pointer-events-none [&_svg]:size-4 [&_svg]:shrink-0 dark:ring-offset-gray-950 dark:focus-visible:ring-gray-300 text-gray-900 underline-offset-4 hover:underline dark:text-gray-50 h-10 px-4 py-2"
                >View Source Code</a
              >
            </div>
            <Prose className="mt-8 w-full">
              <Content />
            </Prose>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>
