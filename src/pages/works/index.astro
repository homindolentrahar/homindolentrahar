---
import Layout from "@/layouts/Layout.astro";
import type { CollectionEntry } from "astro:content";
import { getCollection } from "astro:content";
import WorksContent from "@/components/works/WorksContent";

const works: CollectionEntry<"project">[] = await getCollection("project");
---

<Layout title="Works">
  <main class="flex flex-col">
    <div
      class="flex flex-col justify-start items-center p-8 mt-16 min-h-[720px]"
    >
      <div class="w-full md:w-8/12 lg:w-6/12 flex flex-col items-center">
        <h1
          class="text-3xl md:text-4xl font-semibold text-gray-950 dark:text-white text-center md:text-start"
        >
          Works
        </h1>
        <p class="text-gray-500 dark:text-gray-400 text-center mt-4">
          Collection of my works, mostly personal projects and some professional
          works with strict NDA, where I'm trying to write down the key points
          of each project here.
        </p>
      </div>
      <WorksContent
        client:load
        works={works}
        className="w-full flex-grow mt-8 lg:mt-12"
      />
    </div>
  </main>
</Layout>
